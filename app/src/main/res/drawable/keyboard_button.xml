<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Color cuando el botón está presionado -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ECEFF1" /> <!-- Color por defecto del botón -->
            <stroke android:width="2dp" android:color="#B0BEC5" /> <!-- Borde -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>